# ========================================
# Auto-Didact Backend Environment Variables
# ========================================
# Copy this file to .env and fill in your actual values.
# NEVER commit .env to version control!

# ----------------------------------------
# LLM (Language Model) - Groq API
# ----------------------------------------
# Get your API key from: https://console.groq.com/keys
GROQ_API_KEY=gsk_your_groq_api_key_here

# ----------------------------------------
# Database - Supabase (PostgreSQL + pgvector)
# ----------------------------------------
# Get these from your Supabase project settings: https://app.supabase.com
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your_supabase_service_role_key_here

# ----------------------------------------
# Text-to-Speech (TTS) - Edge TTS
# ----------------------------------------
# No API key needed for edge-tts!
# Voice options: en-US-GuyNeural, en-US-JennyNeural, en-GB-SoniaNeural, etc.
# Full list: https://github.com/rany2/edge-tts#voice-list
TTS_VOICE=en-US-GuyNeural

# ----------------------------------------
# Image Generation - Stable Diffusion (diffusers)
# ----------------------------------------
# Model ID from Hugging Face Hub (default: Stable Diffusion v1.5)
# Options: runwayml/stable-diffusion-v1-5, stabilityai/stable-diffusion-2-1
SD_MODEL_ID=runwayml/stable-diffusion-v1-5

# Style prefix added to all image prompts for consistency
# Examples: "watercolor illustration", "flat design", "photorealistic"
IMAGE_STYLE_PREFIX=educational illustration, clean, simple, minimalist

# Base seed for deterministic image generation (ensures consistent style)
# Each scene uses: base_seed + scene_index
IMAGE_BASE_SEED=42

# Number of diffusion steps (higher = better quality but slower)
# Range: 20-50 recommended (default: 30)
SD_INFERENCE_STEPS=30

# Guidance scale (how closely to follow prompt)
# Range: 7.0-15.0 (default: 7.5)
SD_GUIDANCE_SCALE=7.5

# ----------------------------------------
# Optional: Hugging Face Token
# ----------------------------------------
# Only needed if you use gated models or want to download from private repos
# Get token from: https://huggingface.co/settings/tokens
# HUGGINGFACE_TOKEN=hf_your_token_here

# ----------------------------------------
# Optional: Advanced Settings
# ----------------------------------------
# Set to 'cuda' to force GPU, 'cpu' to force CPU (auto-detected by default)
# DEVICE=cuda
